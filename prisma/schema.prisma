generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Institution {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  phone       String?
  about       String?
  image       String?
  url         String?
  socialLinks Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
